<% provide :title, t(".login") %>
<div class="login-form">
<%= form_for :session, url: login_path do |f| %>
  <h2 class="text-center"><%= t ".login" %></h2>   
  <div class="form-group">
    <div class="input-group">
      <span class="input-group-addon"><i class="fa fa-user"></i></span>
      <%= f.email_field :email, class: "form-control", placeholder: t(".email"), required:"required" %>
    </div>
  </div>
  <div class="form-group">
    <div class="input-group">
      <span class="input-group-addon"><i class="fa fa-lock"></i></span>
      <%= f.password_field :password, class: "form-control", placeholder: t(".password"), required:"required" %>
    </div>
   </div>
  <div class="clearfix">
    <%= f.label :remember_me, class: "checkbox inline col-sm-4 " do %><%= f.check_box :remember_me %>
    <span><%= t ".remember"%></span>
    <% end %>
  </div>       
  <div class="form-group">
    <%= f.submit t(".submit"), class: "btn btn-primary" %>
  </div>
<% end %>
<p class="text-center text-muted small"><%= t(".donnot", href1: link_to(t(".Sign_up"), signup_path )).html_safe %></p>
</div>
