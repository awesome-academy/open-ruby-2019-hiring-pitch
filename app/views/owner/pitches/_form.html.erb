<%= form_for [:owner, @pitch] do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <%= f.label :description, t(".description") %>
  <%= f.text_field :description, class: "form-control", required: "required" %><br>
  <%= f.label :address, t(".address") %>
  <%= f.text_field :address, class: "form-control", required: "required" %><br>
  <%= f.label :image, t(".image") %>
  <%= f.file_field :image, class: "form-control" %><br>
  <%= f.label :start_time, t(".start_time") %>
  <%= f.time_field :start_time, class: "form-control", required: "required" %><br>
  <%= f.label :end_time, t(".end_time") %>
  <%= f.time_field :end_time, class: "form-control", required: "required" %><br>
  <%= f.label :price, t(".price") %>
  <%= f.number_field :price, class: "form-control", required: "required" %><br>
  <%= f.label :status, t(".status") %>
  <%= f.select :status, pitch_status_option, required: "required" %><br><br>
  <%= f.submit t(".submit"), class: "btn btn-primary" %>
<% end %>
