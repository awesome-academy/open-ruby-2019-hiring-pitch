<%= form_for @comment, remote: true do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <%= hidden_field_tag :pitch_id, @pitch.id %>
  <h3 class="pull-left"><%= t ".new" %></h3>
  <button type="submit" class="btn btn-normal pull-right"><%= t ".submit" %></button>
  <fieldset>
    <div class="row">
      <div class="col-sm-3 col-lg-2 hidden-xs">
        <%= image_tag get_image(current_user), alt: "Norway", class: "img-responsive img-circle" %>
      </div>
      <div class="form-group col-xs-12 col-sm-9 col-lg-10">
        <%= f.text_area :content, class: "form-control", require: "require", id: "text_area", placeholder: t(".your_comment") %>
      </div>
    </div>
  </fieldset>
<% end %>
